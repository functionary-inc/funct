{
  "private": true,
  "version": "4.0.5",
  "name": "funct",
  "scripts": {
    "lint": "lerna run --parallel lint --",
    "format": "lerna run --parallel format --",
    "setup:dev:create": "scripts/postCreate",
    "build": "lerna run build --include-dependencies --stream  --",
    "build:watch": "lerna run --parallel build:watch --",
    "dev": "lerna run dev",
    "lerna:publish": "lerna run --parallel build && lerna publish --",
    "test": "lerna run test --",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Justin Hilliard <justin@functionary.run>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/functionary-inc/functionary-javascript.git"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "babel-jest": "^29.3.1",
    "dotenv-flow": "^3.2.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lerna": "^6.0.3",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.3"
  }
}
